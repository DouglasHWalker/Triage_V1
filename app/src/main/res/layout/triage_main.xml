<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/MonthlyViewRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.retrotech.triage.customviews.MonthlyView
            android:id="@+id/monthlyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            custom:accentColor="@color/colorAccent"
            custom:backgroundColor="@color/colorPrimary"
            custom:dateTextSize="40"
            custom:foregroundColor="@color/colorPrimaryDark"
            custom:inactiveColor="@color/colorInactive"
            custom:monthTextSize="52" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DailyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Toolbar"
        android:layout_below="@+id/MonthlyViewRow"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, 12 September 2020"
            android:textColor="@color/colorPrimaryDark"
            android:paddingStart="32dp"
            android:paddingEnd="0dp"
            android:textSize="18sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/CalendarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/CalendarButtonText"
            android:textAllCaps="false" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/FilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/FilterButtonText"
            android:textAllCaps="false" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/TodayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TodayButtonText"
            android:textAllCaps="false"
            android:onClick="todayBtnClick"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>